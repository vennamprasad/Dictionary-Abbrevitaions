    <fragment
        android:id="@+id/navigation_dictionary"
        android:name="com.prasad.abbreviationsfinder.view.ui.dictionary.DictionaryFragment"
        android:label="@string/dictionary"
        tools:layout="@layout/fragment_dictionary" />

    <fragment
