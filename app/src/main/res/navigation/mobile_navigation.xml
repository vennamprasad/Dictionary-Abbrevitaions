        android:name="com.prasad.abbreviationsfinder.view.ui.acronyms.AbbreviationFragment"
        android:label="@string/acronyms"
        tools:layout="@layout/fragment_abbreviations" />
    <fragment
        android:id="@+id/navigation_bookmarks"
